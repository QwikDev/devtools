{
  "name": "devtools",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "dev:ui": "pnpm --filter devtools-ui dev",
    "dev:kit": "pnpm --filter devtools-kit dev",
    "dev:plugin": "pnpm --filter plugin-devtools dev",
    "build:ui": "pnpm --filter devtools-ui build",
    "build:kit": "pnpm --filter devtools-kit build",
    "build:plugin": "pnpm --filter plugin-devtools build",
    "playground": "pnpm --filter playground dev",
    "dev": "pnpm --parallel dev",
    "build": "pnpm build:kit && pnpm build:ui && pnpm build:plugin",
    "build:dist": "tsx scripts/build.ts",
    "publish": "cd dist && npm publish"
  },
  "private": false,
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.10.1",
    "eslint": "^9.16.0",
    "fs-extra": "^11.2.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.0",
    "unbuild": "^3.0.1",
    "vite": "^6.0.3"
  },
  "keywords": [
    "qwik",
    "devtools",
    "plugin"
  ]
}
